{% extends "flexigrid.j2" %}

{% block sidebar %}
<h4>Latest News</h4>
{% set latest = resource.node.walk_resources()|selectattr("is_processable")|selectattr("meta.release")|sort(reverse=True, attribute="meta.release")|first() %}
<h5>{{latest.meta.title}}</h5>
<h6>{{latest.meta.releasedate.strftime("%e %B, %Y")}}</h6>
<p>
{{latest.meta.description}}
</p>
<p><a class="ym-button ym-next" href="{{latest.url}}">Read more...</a></p>
{% endblock %}

{% block extrahead %}
<link rel="stylesheet" href="/media/css/jquery.bxslider.css" />
{% endblock %}

{% block footscripts %}

<!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

<script>window.jQuery || document.write('<script src="js/libs/jquery-1.8.2.min.js">\x3C/script>')</script>


<script src="/media/js/libs/jquery.bxslider.js"></script>
<script>
$(document).ready(function(){
  $('.bxslider').bxSlider(
  {captions: true,
  mode: "fade",
  speed: 1000,
  pause: 6000,
  pager: false,
   auto: true});
});
</script>
{% endblock %}

